# Application
APP_NAME="ISO 27001 Platform"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_KEY=

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=iso_platform
DB_USERNAME=iso_user
DB_PASSWORD=iso_pass

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

# Security
CSRF_TOKEN_LENGTH=32
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=15
PASSWORD_MIN_LENGTH=12

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,docx,xlsx,png,jpg,jpeg
UPLOAD_PATH=/var/www/html/public/uploads

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=/var/www/html/storage/logs

# Cache
CACHE_DRIVER=file
CACHE_TTL=300
